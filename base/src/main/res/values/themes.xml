<resources>
    <!-- Base application theme. -->
    <style name="Theme.AiDashIVMS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AiDashIVMS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AiDashIVMS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AiDashIVMS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintRegularText">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">@font/mont_regular</item>
    </style>

    <style name="HintRegular10" parent="HintRegularText">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintRegular11" parent="HintRegularText">
        <item name="android:textSize">@dimen/button_text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintRegular12" parent="HintRegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintRegular14" parent="HintRegularText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryRegularText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mont_regular</item>
    </style>

    <style name="PrimaryRegular11" parent="PrimaryRegularText">
        <item name="android:textSize">@dimen/button_text_size_small</item>
    </style>

    <style name="PrimaryRegular12" parent="PrimaryRegularText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimaryRegular13" parent="PrimaryRegularText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PrimaryRegular14" parent="PrimaryRegularText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchBoxStyle" parent="PrimaryRegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SecondaryRegularText">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/mont_regular</item>
    </style>

    <style name="SecondaryRegular12" parent="SecondaryRegularText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SecondaryRegular14" parent="SecondaryRegularText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryBoldText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/mont_bold</item>
    </style>

    <style name="PrimaryBold14" parent="PrimaryBoldText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WhiteBold14" parent="PrimaryBold14">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerText" parent="PrimaryRegularText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyFlatBorderButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/curve_accent_border</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyTabletAccentButton" parent="MyFlatBorderButton">
        <item name="android:background">@drawable/selector_tablet_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="MyTabletAccentButton11" parent="MyTabletAccentButton">
        <item name="android:textSize">@dimen/button_text_size_small</item>
        <item name="android:layout_height">@dimen/small_button_height</item>
    </style>

    <style name="MyPrimaryLabel" parent="PrimaryRegularText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>